    <div class="d-flex">
        <div class=" row subEncabezado">
            <div class="col-12 col-sm-6">
                <div class="input-group">
                    <span class="input-group-text">Desde</span>
                    <input type="datetime-local" id="dateTime_Desde"
                    class="form-control" />
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="input-group">
                    <span class="input-group-text">Hasta</span>
                    <input type="datetime-local" id="dateTime_Hasta"
                        class="form-control" />
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="input-group">
                    <span class="input-group-text">Agrupar</span>
                    <select name="primaryFilter" id="primaryFilter" class="form-control w-auto">
                        <option value=""> --- </option>
                        <option value="tipoEjercicio">Tipo de Ejercicio</option>
                        <option value="evento">Evento</option>
                        <option value="lugar">Lugar</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="input-group">
                    <span class="input-group-text">SubAgrupar</span>
                    <select name="secondaryFilter" id="secondaryFilter" class="form-control w-auto">
                        <option value=""> --- </option>
                        <option value="tipoEjercicio">Tipo de Ejercicio</option>
                        <option value="evento">Evento</option>
                        <option value="lugar">Lugar</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

