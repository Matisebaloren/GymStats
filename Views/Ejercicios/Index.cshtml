<!-- Encabezado -->
<div class="d-flex align-items-center encabezado">
    <h2 class="me-auto">Ejercicios físicos</h2>

    <button type="button" class="btn btn-custom1 btn-create" onclick="AbrirModal()">
        <svg width="13" height="13" viewBox="0 0 29 29" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M28.9415 18.8665H18.9839V28.8241H10.6058V18.8665H0.648158V10.557H10.6058V0.599367H18.9839V10.557H28.9415V18.8665Z"
                fill="white" />
        </svg>
    </button>
</div>

<div class="d-flex">
    <div class=" row subEncabezado">
        <div class="col-6">
            <div class="input-group">
                @* <label for="dateTime_Desde" class="form-label">Desde</label> *@
                <span class="input-group-text">Desde</span>
                <input type="datetime-local" name="dateTime_Desde" id="dateTime_Desde" class="form-control"
                    onchange="ListadoEjercicios()" class="form-control" />
            </div>
        </div>
        <div class="col-6">
            <div class="input-group">
                @* <label class="form-label">Hasta</label> *@
                <span class="input-group-text">Hasta</span>
                <input type="datetime-local" id="dateTime_Hasta" onchange="ListadoEjercicios()" class="form-control" />
            </div>
        </div>
    </div>
</div>


<!-- Tabla -->
<table class="table table-striped table-custom">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Lugar</th>
            <th class="d-none d-md-table-cell">Evento</th>
            <th>Observación</th>
            <th class="d-none d-md-table-cell">Inicio</th>
            <th class="d-none d-md-table-cell">Fin</th>
            <th class="d-none d-md-table-cell">Duración</th>
            <th class="text-end">Gasto calórico</th>
            <th colspan="2" class="col-1 text-center">Acciones</th>
        </tr>
    </thead>
    <tbody id="tbody-ejercicios">
    </tbody>
</table>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/ejercicios.js"></script>
    <script src="~/js/formatearDateInput.js"></script>

}