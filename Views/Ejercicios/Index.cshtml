@{
    ViewData["Title"] = "Ejercicios";
}

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createModalLabel">Añadir Ejercicio</h1>
            </div>
            <form id="createEjercicioForm">
                <div class="modal-body row">

                    <input id="ejercicioID" value="0" hidden>
                    <div class="col-12 mb-3">
                        <label for="tipoEjercicioID" class="form-label">Tipo de Ejercicio <span
                                class="text-danger">*</span></label>
                        <select name="tipoEjercicioID" id="tipoEjercicioID" class="form-select" required> </select>
                        <p class="text-danger" id="selectAlertTipo"></p>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="lugarID" class="form-label">Lugar <span class="text-danger">*</span></label>
                        <select name="lugarID" id="lugarID" value="0" class="form-select" required> </select>
                        <p class="text-danger" id="selectAlertLugar"></p>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="eventoID" class="form-label">Evento <span class="text-danger">*</span></label>
                        <select name="eventoID" id="eventoID" value="0" class="form-select" required> </select>
                        <p class="text-danger" id="selectAlertEvento"></p>
                    </div>
                    <div class="col-6 mb-3">
                        <label for="inicio" class="form-label">Inicio <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" id="inicio" name="inicio">
                        <p class="text-danger" id="alertInicio"></p>
                    </div>
                    <div class="col-6 mb-3">
                        <label for="emojiSelectDropdown" id="emocionInicioLabel" class="form-label">Estado
                            de ánimo</label>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="emocionInicioButton"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Seleccionar Emoji
                            </button>
                            <ul id="emocionInicioUl" class="dropdown-menu scroll-emoji"
                                aria-labelledby="emojiSelectDropdown">
                            </ul>
                        </div>
                        <input type="hidden" id="emocionInicioID" />
                    </div>


                    <div class="col-6 mb-3">
                        <label for="fin" class="form-label">Fin <span class="text-danger">*</span></label>
                        <input type="datetime-local" class="form-control" id="fin" name="fin">
                        <p class="text-danger" id="alertFin"></p>
                    </div>
                    <div class="col-6 mb-3">
                        <label for="emojiSelectDropdown" id="emocionFinLabel" class="form-label">Estado
                            de ánimo</label>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="emocionFinButton"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Seleccionar Emoji
                            </button>
                            <ul id="emocionFinUl" class="dropdown-menu scroll-emoji"
                                aria-labelledby="emojiSelectDropdown">
                            </ul>
                        </div>
                        <input type="hidden" id="emocionFinID" />
                    </div>


                    <div class="mb-3">
                        <label for="observacion" class="form-label">Observación</label>
                        <textarea type="text" class="form-control" id="observacion" name="observacion"></textarea>
                    </div>
                    <button type="submit" class="btn btn-custom1">Guardar</button>

                </div>
            </form>
        </div>
    </div>
</div>
