<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymStats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">

    @* <link rel="stylesheet" href="~/GymStats.styles.css" asp-append-version="true" /> *@



</head>

<body>
    <!-- Botón para abrir/cerrar el sidebar -->
    <button class="btn btn-danger toggle-btn" id="toggleSidebar"><i id="hearthIcon"
            class="bi bi-heart-pulse-fill"></i></button>

    <!-- Sidebar -->
    <div id="sidebar">
        <nav class="navbar navbar-light bg-light flex-column">
            <div class="Logo_navbar">
                <a class="navbar-brand Logo_navbar_title p-3" href="#">GymStats</a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Home">Panel General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/TiposEjercicios">Tipos de Ejercicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Ejercicios">Ejercicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Lugares">Lugares</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Eventos">Eventos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/identity/account/logout">Salir</a>
                </li>
            </ul>
        </nav>
        <div class="container">
            &copy; 2024 - GymStats - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/js/sweetalert2.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
